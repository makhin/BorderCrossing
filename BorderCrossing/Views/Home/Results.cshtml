@model BorderCrossingResponse

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Въезд</th>
                <th>Страна</th>
                <th>Выезд</th>
                <th>Дни</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Period period in Model.Periods)
            {
                <tr>
                    <td><a href="https://www.google.com/maps/search/?api=1&query=@period.ArrivalPoint.Point.Coordinate.X,@period.ArrivalPoint.Point.Coordinate.Y">@period.ArrivalPoint.Date</a></td>
                    <td>@period.Country</td>
                    <td><a href="https://www.google.com/maps/search/?api=1&query=@period.DeparturePoint.Point.Coordinate.X,@period.DeparturePoint.Point.Coordinate.Y">@period.ArrivalPoint.Date</a></td>
                    <td>@period.Days</td>
                </tr>
            }
        </tbody>
    </table>

        <table class="table">
            <thead>
                <tr>
                    <th>Страна</th>
                    <th>Дни</th>
                </tr>
            </thead>
            <tbody>
                @foreach (KeyValuePair<string, int> countryDay in Model.CountryDays)
                {
                    <tr>
                        <td>@countryDay.Key</td>
                        <td>@countryDay.Value</td>
                    </tr>
                }
            </tbody>
        </table>

</div>
